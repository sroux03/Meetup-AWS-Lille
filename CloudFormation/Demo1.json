{
  "Resources": {
    
    "MyFirstCloudFormationServer" : {
        "Type" : "AWS::EC2::Instance",
        "Properties" : {
	      	"KeyName" : "<change-it>",
        	"InstanceType" : "t2.micro",
	    	"SubnetId" : "<change-it>",
       		"ImageId"  : "<change-it>",
        	"SecurityGroupIds" : ["<change-it>"],
		    "Tags" : [{ "Key" : "Name", "Value" : "MyFirstCloudFormationServer" }, 
			      { "Key" : "RÃ´le", "Value" : "TestServer" }, 
			      { "Key" : "Zone", "Value" : "default" },{ "Key" : "VPC", "Value" : "default" }],
		    "BlockDeviceMappings" : [ {
            		"DeviceName" : "/dev/sdb",
                	"Ebs" : {
                		"VolumeType" : "standard",
                		"DeleteOnTermination" : "true",
                		"VolumeSize" : "2"
                	}
            	     } ],
		 "UserData"       : { "Fn::Base64" : { "Fn::Join" : ["", [
 									  "#!/bin/bash -xe\n",
             								  "sudo wget -O /etc/motd https://s3-eu-west-1.amazonaws.com/meetupawslille/CloudFormation/motd"
									 ]
								    ]
						     }
			   	    } 
		 }
      },
      
     "ElasticIPAssociation" : {
      	"Type": "AWS::EC2::EIPAssociation",
   	"Properties": {
      		"AllocationId": "<change-it>",
      		"EIP": "<change-it>",
      		"InstanceId":{"Ref":"MyFirstCloudFormationServer"}
	}
      }	
	
 }
}
