{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description" : "This CF Template deploys and EC2 instance.",
  "Resources": {
    
	"MyFirstCloudFormationServer" : {
    	"Type" : "AWS::EC2::Instance",
        "Metadata" : {
        	"Comment1" : "Get the motd file from S3 Bucket",
			"AWS::CloudFormation::Init" : {
				"configSets" : {
					"Run" : [ "Run" ]
				},
				"Run" : {
					"commands" : {
              				"cp_motd_from_s3" : {
                				"command" : "wget -O /etc/update-motd.d/99-footer https://s3-eu-west-1.amazonaws.com/meetupawslille/CloudFormation/motd"
							},
							"give_exec" : {
                				"command" : "chmod 755 /etc/update-motd.d/99-footer"
							}
					}
				}		
			}
		},
		"Properties" : {
			"KeyName" : "defaultSRX",
        		"InstanceType" : "t2.micro",
	    		"SubnetId" : "subnet-77829900",
       			"ImageId"  : "ami-e1398992",
        		"SecurityGroupIds" : ["sg-e2d9d486"],
				"Tags" : [{ "Key" : "Name", "Value" : "MyFirstCloudFormationServer" }, { "Key" : "RÃ´le", "Value" : "TestServer" }, 
			  		{ "Key" : "Zone", "Value" : "default" },{ "Key" : "VPC", "Value" : "default" }],
				"BlockDeviceMappings" : [ {
				"DeviceName" : "/dev/sdb",
                	"Ebs" : {
                		"VolumeType" : "standard",
                		"DeleteOnTermination" : "true",
                		"VolumeSize" : "4"
                	}
            	} ],
                "UserData"       : { "Fn::Base64" : { "Fn::Join" : ["", [
                                                                          "#!/bin/bash -xe\n",
																		  "yum update -y aws-cfn-bootstrap\n",
									  									  "/opt/aws/bin/cfn-init ",
          								  								  "         --stack ", { "Ref" : "AWS::StackName" },
                                                                          "         --resource MyFirstCloudFormationServer",
          								  								  "         --configsets Run ",
          								  								  "         --region ", { "Ref" : "AWS::Region" }, "\n"
																	]]
													}
				}
	}
},

	"ElasticIPAssociation" : {
        	"Type": "AWS::EC2::EIPAssociation",
        	"Properties": {
                	"AllocationId": "eipalloc-ac7712c9",
                	"InstanceId":{ "Ref" : "MyFirstCloudFormationServer" }
        	}
	}

 }
}

